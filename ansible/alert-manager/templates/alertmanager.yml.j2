global:
  resolve_timeout: 5m
  smtp_smarthost: '{{ smtp_host }}'
  smtp_from: '{{ smtp_from }}'
  smtp_auth_username: '{{ smtp_user }}'
  smtp_auth_password: '{{ smtp_pass }}'

route:
  group_by: ['alertname']
  group_wait: 10s
  group_interval: 5m
  repeat_interval: 1h
  receiver: 'slack-notifications'
  routes:
    - receiver: 'email-alerts'
      match:
        severity: critical

receivers:
  - name: 'slack-notifications'
    slack_configs:
      - send_resolved: true
        username: 'Prometheus'
        channel: '{{ slack_channel }}'
        api_url: '{{ slack_webhook_url }}'

  - name: 'email-alerts'
    email_configs:
      - to: '{{ email_to }}'
        send_resolved: true

# roles/alertmanager/vars/main.yml
alertmanager_version: "0.26.0"
alertmanager_download_url: "https://github.com/prometheus/alertmanager/releases/download/v{{ alertmanager_version }}/alertmanager-{{ alertmanager_version }}.linux-amd64.tar.gz"
alertmanager_install_dir: "/usr/local/bin"
alertmanager_config_dir: "/etc/alertmanager"
alertmanager_config_path: "/etc/alertmanager/alertmanager.yml"

slack_webhook_url: "https://hooks.slack.com/services/XXX/YYY/ZZZ"
slack_channel: "#monitoring"

smtp_host: "smtp.example.com:587"
smtp_from: "alerts@example.com"
smtp_user: "alerts@example.com"
smtp_pass: "yourpassword"

email_to: "admin@example.com"